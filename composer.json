{
    "name": "example/php-rest-api",
    "description": "Simple PHP 8.2 REST API with PostgreSQL (no external deps required)",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "migrate": "php scripts/migrate.php",
        "seed": "php scripts/seed.php",
        "test": "php -d variables_order=EGPCS vendor/bin/phpunit"
    }
}

